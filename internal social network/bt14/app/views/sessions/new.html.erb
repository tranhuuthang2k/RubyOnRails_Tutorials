<%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="global-container">
	<div class="card login-form">
	<div class="card-body">
        
	   <h3 class="card-title text-center">Log in</h3>
		<div class="card-text">
			<!--
			<div class="alert alert-danger alert-dismissible fade show" role="alert">Incorrect username or password.</div> -->
			<form action='/login' method="post">
                    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
				<div class="form-group">
					<label for="email">Email address</label>
					<input type="email" class="form-control form-control-sm" id="email" name="email" aria-describedby="emailHelp">
				</div>

				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" class="form-control form-control-sm" id="password" name="password">
				</div>
				<button type="submit" class="btn btn-primary btn-block">Sign in</button>
				
				<div class="form-group">
					<label class="form-check-label" for="remember_me">
					 Save password?	
					<input class="form-check-input" type="checkbox" value="on" id="flexCheckDefault" name="remember_me">
					</label>
				</div>
				<a href='/password_resets/new' style="float:right;font-size:12px;">Forgot password?</a>
				<div class="sign-up">
					Don't have an account? <a href="/register">Create One</a>
				</div>
			</form>
		</div>
	</div>
</div>
</div>
