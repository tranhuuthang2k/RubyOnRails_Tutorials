<%= javascript_include_tag('manager/post.js') %>
<% if !@friends.nil? %>
  <div class="wrapper">
    <div class="story_q">
      <div class="story" id="page-<%= @next_page %>">
        <%@friends.each do |item| %>
          <div class="story_s" data-user-id=<%= item.id%> title=<%=item.name%>>
              <img class="bg" src="https://cdn.pixabay.com/photo/2020/04/11/00/25/girl-5028253__340.jpg">
              <div class="overlay"></div>
              <div class="text">
                  <img src="https://cdn.pixabay.com/photo/2017/03/04/12/15/programming-2115930__340.jpg" class="avatar">
                  <h4><%= item.name %></h4>
              </div>
          </div>
        <% end %>
      </div>
      <img src="https://uxwing.com/wp-content/themes/uxwing/download/02-arrow-direction/next.png" class="next-r">
    </div>
</div>
<% end %>


<script id="story-micro-template" type="text/x-handlebars-template">
  {{#each users}}
     <div class="story_s"  data-user-id="{{id}}" title="{{name}}">
            <img class="bg" src="https://cdn.pixabay.com/photo/2020/04/11/00/25/girl-5028253__340.jpg">
            <div class="overlay"></div>
            <div class="text">
                <img src="https://cdn.pixabay.com/photo/2017/03/04/12/15/programming-2115930__340.jpg" class="avatar">
                <h4>{{name}}</h4>
            </div>
          </div>
      </div>
  {{/each}}
</script>
<style type="text/css">
.wrapper{
  width:600px;
  padding: 15px;
  height: 190px;box-shadow: rgba(0, 0, 0, 0.16) 0px 10px 36px 0px, rgba(0, 0, 0, 0.06) 0px 0px 0px 1px;
  background: white;
  border-radius: 10px;
}        
.story{
  width:100%;
  display: flex;
  align-items: center;
  height: 170px;
  overflow-x: auto;
  overflow: hidden
}
.story_s{
  position: relative;
  height: 160px;
  margin-left: 10px;
  min-width:100px;max-width:100px;
}
.story_s:first-child{
  margin:0;
}
.bg{
  width:100px;object-fit: cover;
  height: 160px;
  border-radius: 10px;
}
.overlay{
  width:100px;
  height: 160px;
  background-image: linear-gradient(transparent, #00000094);
  position: absolute;
  top:0;
  border-radius: 10px;
}
.text{
  position: absolute;
  top:50%;
  width:100%;
  padding: 10px;
  left: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  transform: translate(-50% , -50%);
}
.avatar{
  border-radius: 15px;
  padding: 4px;
  width:40px;
  height: 40px;object-fit: cover;
  border:2px solid white;
}
h4{  
  margin-top:13px;
  color:white;
  font-family: 'Mulish';
  font-weight: lighter;
}
.story_q{
  position: relative;
  height: 170px;
  width:100%;
}
.left{
  padding: 10px;
  width:40px;
  height: 40px;background: white;
  position: absolute;
  top:0;
  border-radius: 50px;
  left: -20px;
  top:30%;
}
.next-r{
  padding: 10px;
  width:40px;
  height: 40px;background: white;
  position: absolute;
  top:0;
  border-radius: 50px;
  right: -20px;
  top:30%;
}
</style>
